<div class="container">
  <%= form_for @city do |f| %>
    <div class="form-group">
      <%= label(:city, :name) %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label(:city, :description) %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label(:city, :photo) %>
      <%= f.text_field :photo, class: "form-control" %>
    </div>
    <%= f.submit "Create City", class: "btn btn-primary" %>
  <% end %>
</div>